# =======================================
#         Archivo .env de ejemplo
# =======================================

# URL de conexión a la base de datos
DATABASE_URL="postgresql://usuario:contraseña@localhost:5432/nombre_base_datos"

# Entorno de ejecución (desarrollo, producción, etc.)
NODE_ENV=development

# Puerto en el que se levantará el servidor
PORT=8000

# Clave secreta para firmar JWTs
JWT_SECRET=tu_clave_secreta_jwt

# API key para el servicio Gemini (Google AI)
GEMINI_API_KEY=tu_api_key_de_gemini

# Nombre del microservicio de aula y su URL en desarrollo
MICROSERVICE_AULA_NAME=microservicio-aula
MICROSERVICE_URL_DEV=http://localhost:3001

# Credenciales del servicio de domótica TUYA
TUYA_CLIENT_ID=tuya_client_id
TUYA_CLIENT_SECRET=tuya_client_secret
TUYA_DEVICE_ID=tuya_device_id
TUYA_API_URL=https://openapi.tuya.com

# Configuración de canales ThingSpeak
THINGSPEAK_CHANNEL_ID_A01=0000000
THINGSPEAK_API_KEY_A01=tu_api_key_thingspeak_a01